<div class=" container-bg">
  <div class="container-headers container-bg">
    <h1 id="left-text">Authentische Momente</h1>
    <h1 id="right-text">professionell eingefangen</h1>
  </div>
</div>


<style>
  @import url('https://fonts.googleapis.com/css2?family=Mate+SC&display=swap');

  h1 {
    font-family: "Mate SC", serif;
    font-weight: 400;
    font-style: italic;
  }

  .container-headers {
    max-width: 800px;
    gap: var(--space-xl);
    margin: 0 auto;
    overflow: hidden;
  }

  .container-bg {
    background-color: var(--clr-bg-dark-full);
  }

  #left-text {
    text-align: center;
    margin-top: var(--space-xl-2xl);
  }

  #right-text {
    text-align: center;
    margin-bottom: var(--space-xl-2xl);
  }

  body {
    overflow-x: hidden;
  }

</style>

<script>
  import gsap from 'gsap';
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  let mm = gsap.matchMedia();

  mm.add("(min-width: 320px", () => {

    gsap.from("#left-text", {
      scrollTrigger: {
        trigger: "#left-text",
        start:"-100 75%",      //100px Ã¼ber element & mitte des viewports
        end:"300 75%",         //100px unter element & mitte des viewports
        id: "left-text",
        markers: false,
        scrub: 2,
      },
      x: "22%",                  // Wie weit sich element insgesamt bewegt
    });

    gsap.from("#right-text", {
      scrollTrigger: {
        trigger: "#right-text",
        start:"-100 75%",
        end:"300 75%",
        id: "right-text",
        markers: false,
        scrub: 2,
      },
      x: "-22%",
    });

  })
</script>
